<section id="screen-width" style=" width:60%; min-height: 655px; margin-left:20%; margin-right:20%;">
  <article id="desktop">
    <div class="row">
        <div class="co1 s12 m11 l11">
          <div class="table-wrapper">
            <div class="main-container">
                <h1>커뮤니티 게시판</h1>
                <br>
                <br>
                <div class="write">
                    <div class="wrap" style="float:right; margin-right:35px;">
                        <form class="search" action="/home/post_result" method="GET" accept-charset="UTF-8">
                            <input type="text" name="search_keyword" id="search_keyword" placeholder="검색">
                            <button name="botton" type="submit" class="searchButton" >
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </form>
                    </div>
                </div>
                <br>
                <br>
                <br>
                <br>
                <table class="bordered highlight">
                    <thead>
                        <tr>
                            <th data-field="title">제목</th>
                            <th data-field="author">작성자</th>
                            <th data-field="date">날짜</th>
                            <th data-field="view">view</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @posts.each do |p| %>
                            <tr>
                                <td>
                                    <%=link_to p.title, post_view_path(p.id), method: 'get'%>
                                    <br>
                                </td>
                                <td>
                                    <%="익명"%><br>
                                </td>
                                <td>
                                    <%=p.created_at.strftime("%Y-%m-%d")%><br>
                                </td>
                                <td>
                                    <%=p.impressionist_count%>
                                </td>
                            </tr>
                        <%end%>
                    </tbody>
                    <tbody>
                    </tbody>    

                </table>
                <br>
                <br>
                <br>
                <br>
                <div class="write">
                    
                         <form action="/home/post_write" method="GET">
                            <button type="submit" class="btn btn-secondary btn-lg">글쓰기</button>
                        </form>
                    
                </div>
                <div class="flickr_pagination">...</div>
            </div>
          </div>    
        </div>
    </div>
  </article>
</section>
