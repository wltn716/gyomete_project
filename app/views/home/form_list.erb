<section style="width:80%;height:80%;box-left:20%;">
  
<!--BEST 교메때 시작-->  
  <% a = 0 %>
  <div style="padding-top:100px;" >
    <div align="center" class="link_to_color"><br>
      <%= image_tag asset_path('best.png'),style:"width:25%;",class: 'img-responsive' %><br><br><br>
    </div>
    <%@best_form.each do |p|%>
      <%if p.likers.count != 0 %>
        <div class="row" style="padding:30px 30px 10px 30px;">
          <div id="masonry" class="masonry infinite-scroll">
            <% a = 1 %>
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6 col-12 masonry photography travel" style="cursor:pointer;"onclick="location.href='/form_view/<%=p.id%>'">
              <div class="post-article">
                <div class="thumbnail">
                  <%= image_tag asset_path('KakaoTalk_20160828_092045856.png'),style:"width:80%;",class: 'img-responsive' %>
                </div>
                <div class="post-entry">
                  <div class="post-content">
                    <ul class="post-author">
                      <li><a href="javascript:void(0)"><i class="fa fa-user"></i><%=p.writer.nickname%></a></li>
                    </ul>
                    <h5 class="post-title">
                      <%= link_to p.title, form_view_path(p.id) , method: 'get'%>
                    </h5>
                  </div>
                  <div class="post-footer">
                    <ul class="post-link">
                      <li><a >
                        <i class="fa fa-clock-o"></i> <%= p.created_at.strftime("%Y-%m-%d")%>
                      </a></li>
                    </ul><br>
                    <ul class="post-link">
                      <li><a>
                        <i class="glyphicon glyphicon-eye-open"></i>&nbsp;<%= p.impressionist_count%>
                      </a></li>
                    </ul>
                    <ul class="post-link">
                      <li><a href="#">
                        <i class="fa fa-comments-o"></i> <%=p.freplies.count%>
                      </a></li>
                    </ul>
                    <ul class="post-link">
                      <li><a >
                        <i class="glyphicon glyphicon-heart" style="color:#ff6666;"></i>&nbsp;<%=  p.likers.count %> 
                      </a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    <%end%>
    <%if a == 0 %>
      <div align="center">
        <h3>"아직 Best 교메때가 없습니다."</h3>
        <p>베스트 교메때에 도전해보세요!</p>
      </div>
    <%end%>
  </div>
  
  <hr style="background-color:black;">
<!--베스트교메때 끝-->

<!--메일양식logo, 검색창 시작--> 
