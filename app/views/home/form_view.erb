                                          <input type="hidden" value="<%=@view_form.freplies.count%>" name="scrap_replies">
                                          <input type="hidden" value="<%=@view_form.id%>" name="scrap_id">
                                          <button type="submit" class="btn btn-default">스크랩</button>
