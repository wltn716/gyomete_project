<div align="left"style="margin-bottom:1%;margin-top:10%;margin-left:25%;">
    <h1>양식 검색 결과</h1>
</div>

<div style="margin-left:15%;margin-bottom:5%;padding-right:10%;"align="right">
  <div class="write">
    <div class="wrap" style="float:right; margin-right:35px;">
        <form class="search" action="/home/form_result" method="GET" accept-charset="UTF-8">
  
  
            <input type="text" name="search"  class="form_control" placeholder="&nbsp;검색하기" style="width:200px;">
            <button name="botton" type="submit" class="searchButton" >
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </form>
    </div>
  </div>
</div>

         
          
          
          <div class="row p60" style="margin-left:20%;">
                <div id="masonry" class="masonry infinite-scroll">
          <%@forms.each do |p|%>
                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6 col-12 masonry photography travel" style="cursor:pointer;"onclick="location.href='/form_view/<%=p.id%>'">
                        <div class="post-article">
                          <div class="thumbnail">
                        
                          <a href="single.html" title="#">
                               <%= image_tag asset_path('1.jpg'), class: 'img-responsive' %>
                          </a>
                          </div>
                  
                            <div class="post-entry">
                                <div class="post-content">
                                    <ul class="post-author">
                                        <li><a href="javascript:void(0)"><i class="fa fa-user"></i><%=p.writer.nickname%></a></li>
                                    </ul>
                                    <h5 class="post-title">
                                        <%= link_to p.title, form_view_path(p.id) , method: 'get'%>
                                    </h5>
                                </div>
                                <div class="post-footer">
                                    <ul class="post-link">
                                        <li><a >
                                            <i class="fa fa-clock-o"></i> <%= p.created_at.strftime("%Y-%m-%d")%>
                                        </a></li>
                                    </ul><br>
                                    <ul class="post-link">
                                        <li><a>
                                             ಠ <%= p.impressionist_count%>
                                        </a></li>
                                    </ul>
                                    <ul class="post-link">
                                      <li><a href="#">
                                          <i class="fa fa-comments-o"></i> <%=p.freplies.count%>
                                      </a></li>
                                    </ul>
                                    <ul class="post-link">
                                        <li><a >
                                            ♡ <%=  p.likers.count %> 
                                        </a></li>
                                    </ul>
                                
                              
                                </div>
                            </div>
                        </div>
                    </div>
            <%end%>
            </div>
                
            </div>
          


<div style="margin-left:20%;margin-bottom:5%;padding-right:5%;"align="right">
  
  <button class="btn-orange" type="submit">
    <i class="glyphicon glyphicon-pencil"></i>
    <%= link_to "양식 올리기", home_form_write_path, method: 'get', :style => "color:#ffffff"%>
  </button>  
  
</div>