<div class = container style="margin-left:20%;">
    <div class="row">
      <div class="col-md-4">
        <br>
           <%= image_tag asset_path('avatar1.jpg'), style: "border-radius: 100%; width:70%;margin-left:30px;",class: 'img-responsive' %>
      </div>
      <div class="col-md-8" style="width:60%;">
          <hr style="background-color:#ff9e03;"/>
          <h3>이메일: <%= current_user.email %></h3><br>
          <hr style="background-color:#ff9e03;"/>
          <h3>닉네임: <%= current_user.nickname %></h3><br> 
          <hr style="background-color:#ff9e03;"/>
          <h3>전공: <%= current_user.major %></h3><br>
          <hr style="background-color:#ff9e03;"/>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6" style="width:45%;margin-left:5px;border:dashed 1px  #ff9e03; ">
        <table style="margin-left:3px;">
          <h3>내가 쓴 메일양식</h3>
          <br>
          <br>
          <thead>
            <tr>
              <th data-field="title">제목</th>
              <th data-field="author">작성자</th>
              <th data-field="date">날짜</th>
            </tr>
          </thead>
          <tbody>
            <% @forms.each do |p| %>
              <tr>
                <td>
                    <%=link_to p.title, form_view_path(p.id), method: 'get', class: 'css_class', style: 'color:#454443' %>
                    <br>
                </td>
                <td>
                    <%=p.writer.nickname%><br>
                </td>
                <td>
                    <%=p.created_at.strftime("%Y-%m-%d")%><br>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        <br>
        <%=link_to "더 보러가기", home_mypage_mail_archive_path, method: 'get',class:"link_to_color"%>
        <br>
        <br>
      </div>
        
      <div class="col-md-6" style="width:45%;margin-left:30px;border:dashed 1px  #ff9e03; ">
        <table style="margin-left:3px;" >
          <h3>내가 쓴 커뮤니티 글</h3>
          <br>
          <br>
          <thead>
            <tr>
              <th data-field="title">제목</th>
              <th data-field="author">작성자</th>
              <th data-field="date">날짜</th>
              
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |p| %>
              <tr>
                <td>
                    <%=link_to p.title, post_view_path(p.id), method: 'get', class: 'css_class', style: 'color:#454443' %>
                    <br>
                </td>
                <td>
                    <%=p.writer.nickname%><br>
                </td>
                <td>
                    <%=p.created_at.strftime("%Y-%m-%d")%><br>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        <br>
        <%=link_to "더 보러가기", home_mypage_community_archive_path, method: 'get', class:"link_to_color"%>
      <br>
      <br>
      </div>
      
    <div class="row" >
      
      <div class="col-md-6" style="width:45%; margin-left:7px; border:dashed 1px  #ff9e03;margin-top:30px; ">
        <table style="margin-left:3px;">
          <h3>내가 스크랩한 양식</h3>
          <br>
          <br>
          <thead>
            <tr>
              <th data-field="title">제목</th>
              <th data-field="author">작성자</th>
              <th data-field="date">날짜</th>
              
            </tr>
          </thead>
          <tbody>
            <% @scraps.each do |p| %>
              <tr>
                <td>
                    <%=link_to p.title, post_view_path(p.id), method: 'get', class: 'css_class', style: 'color:#454443' %>
                    <br>
                </td>
                <td>
                    <%=p.nickname%><br>
                </td>
                <td>
                    <%=p.time%><br>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        <br>
        <%=link_to "더 보러가기", home_mypage_scrap_archive_path, method: 'get',class:"link_to_color"%>
      <br>
      <br>
      </div>
      <br>
      <br>
      <div class="col-md-6"style="width:45%; margin-left:30px;border:dashed 1px  #ff9e03;margin-top:30px; ">
      
      </div>
      <br>
      <br>
    </div>
    <br>
      <br>
</div>