<section id="screen-width" class="col-md-8 col-md-offset-3" style="margin-top:5%;">
  <article id="desktop">
    <div class="row">
        <div class="co1 s12 m11 l11">
          <div class="table-wrapper">
            <div class="main-container">
                <h1>내가 쓴 커뮤니티 게시글</h1>
                <br>
                <br>
                <div class="write">
                    <div class="wrap" style="float:right; margin-right:35px;">
                        <form class="search" action="/home/post_result" method="GET" accept-charset="UTF-8">

                            <input type="text" name="search" id="search_keyword" placeholder="검색">
                            <button name="botton" type="submit" class="searchButton" >
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </form>
                    </div>
                </div>
                <br>
                <br>
                <br>
                <br>
                <table class="bordered highlight">
                    <thead>
                        <tr>
                            <th data-field="title">제목</th>
                            <th data-field="author">작성자</th>
                            <th data-field="date">날짜</th>
                            <th data-field="view">view</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @posts.each do |p| %>
                            <tr>
                                <td>
                                    <%=link_to p.title, post_view_path(p.id), method: 'get', class: 'css_class', style: 'color:#454443' %>
                                    <br>
                                </td>
                                <td>
                                    <%="익명"%><br>
                                </td>
                                <td>
                                    <%=p.created_at.strftime("%Y-%m-%d")%><br>
                                </td>
                                <td>
                                    <%=p.impressionist_count%>
                                </td>
                            </tr>
                        <%end%>
                    </tbody>
                    <tbody>
                    </tbody>    

                </table>
                <br>
                <br>
                <br>
                <br>
                <div class="flickr_pagination">...</div>
            </div>
          </div>    
        </div>
    </div>
  </article>
</section>
