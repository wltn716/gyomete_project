<section id="screen-width" class="col-md-8 col-md-offset-2">
  <div class="post-type-blog single">
    <div class="container relative">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="post-article">
            <div class="post-entry">
              <div class="post-content">
                <div class="help-block text-danger">
                  <div class="post-title">
                    <h1>이 양식으로 메일 보내기</h1>
                  </div>      
                </div>  
                <br>  
                <br>
                <form id="comment_form" action="/form_m_update/<%=@one_form.id%>" method="POST" >
                  <div class="form-group">
                    <label for="exampleInputEmail1">수신 이메일</label>
                    <input type="email" name="receiver" class="form-control" id="exampleInputEmail1" placeholder="xxxx@email.com">
                  </div>
              <!--#제목입력-->
                  <div class="form-group">
                    <label for="exampleInputEmail1" >제목</label>
                    <input name="title" type="text" class="form-control" value="<%=@one_form.title %>" id="exampleInputEmail1" placeholder="제목을 입력해 주세요">
                  </div>
              <!--#글작성-->
                  <div class="form-group">
                    <label for="comment">내용:</label>
                    <textarea name="content" class="form-control" rows="15" id="comment"><%=@one_form.content %></textarea>
                  </div>
              <!--#글 올리는 버튼-->
                  <button type="submit" class="pull-right confirm_btn">전송</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>                     
              
          