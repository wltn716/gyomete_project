<div class="container">
  <!-- Modal -->
    <div class="modal fade" id="loginModal" role="dialog">
      <div class="modal-dialog">
        
        <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header" style="padding:35px 50px;">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4><span class="glyphicon glyphicon-lock"></span> 로그인</h4>
            </div>
            
            <div class="modal-body" style="padding:40px 50px;">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <span class="glyphicon glyphicon-envelope"></span>&nbsp;<%= f.label :email%>
                  <%= f.email_field :email, class: "form-control", placeholder: "이메일"%>
                </div>
                  
                <div class="form-group">
                  <span class="glyphicon glyphicon-eye-open"></span>&nbsp;<%= f.label :password %>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "비밀번호" %>
                </div>
                  
                <% if devise_mapping.rememberable? -%>
                  <label><%= f.check_box :remember_me, class: "checkbox-inline"%>&nbsp;저장하기</label>
                <% end %>
                <br>
                <%= f.submit "로그인", class:"btn btn-default btn-warning btn-block"%>
              <% end %>
            </div>
              
            <div class="modal-footer">
              <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
              <h7> 아직 회원이 아니신가요?</h7> <%= link_to "회원가입", new_user_registration_path, method: 'get'%></h7><br>
              <h7><%= link_to "비밀번호를 잊으셨나요?", new_user_password_path, method: 'get'%></h7>
            </div>
          </div>
            
      </div>
    </div>
</div>
      
<script>
  window.onload = function(){
    $("#loginModal").modal();
  }
</script>
<%= render "devise/shared/links" %>