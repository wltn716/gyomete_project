<!DOCTYPE html>
<html>
<head>
  <title>교메때</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <!-- Bootstrap 시작 -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
  

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
  <!-- Bootstrap 끝 -->
  
  <!-- Modal  -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  
  
  <!-- Template 시작 -->
  <!-- Google fonts styles -->
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,900italic,900,700italic,700,500italic,500,400italic,300italic,300,100italic,100' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    
  <!-- Lifestone styles -->
  <link rel="stylesheet" href="assets/stylesheets/css/bootstrap.min.css" type="text/css" media="screen">
  <link rel="stylesheet" href="assets/stylesheets/css/font-awesome.min.css" type="text/css" media="screen">
  <link rel="stylesheet" href="assets/stylesheets/css/ionicons.min.css" type="text/css" media="screen">
    
  <!-- OWL Carousel -->
  <link href="assets/stylesheets/css/owl.carousel.css" rel="stylesheet">
  <link href="assets/stylesheets/css/owl.theme.css" rel="stylesheet">
  <link href="assets/stylesheets/css/owl.transitions.css" rel="stylesheet">
  <link rel="stylesheet" href="assets/stylesheets/css/jquery-smartvimeoembed.css" type="text/css" media="screen">
  <link rel="stylesheet" href="assets/stylesheets/css/flexslider.css" type="text/css" media="screen">
  <link rel="stylesheet" href="assets/stylesheets/css/style.css" type="text/css" media="screen">
  
  <!-- FAVICON FILES -->
  <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
  <link rel="icon" href="images/favicon.ico" type="image/x-icon">
</head>
<body class="full-page">
  <!--================= Start Preloader ==================-->
    <div class="preloader">
      <div class="spinner">
        <div class="dot1"></div>
        <div class="dot2"></div>
      </div>
    </div>
  <!--================= End Preloader ====================-->
  <div class ="row">
    <!--================= Start sidebar ==================-->
    <div id="wrapper" class="col-md-1">
      <div id="sidebar-wrapper">
        <div class="drilldown sidebar-nav mCustomScrollbar">
          <div class="sidebar-brand text-center">                     
            <a href="index.html">
              <%= image_tag asset_path('logo.png'), class: 'img-responsive' %>
            </a>
          </div>

          <div class="sidebar-bottom-wrap">
           
            <form id="search_form_1" name="search" method="get" class="search-form_header" action="/home/firstpage_result">
              <span class="submit-wrap"><i class="fa fa-search" aria-hidden="true"></i></span>
              <input type="text" onblur="if (this.value == '') {this.value = 'SEARCH...';}" onfocus="if (this.value == 'SEARCH...') {this.value = '';}" id="search" name="search" value="SEARCH..." class="textboxsearch">
            </form>
          </div>
          
          <div class="drilldown-container">
            <ul class="drilldown-root" style = "text-align: center">                         
              <li class="<%= is_active?(home_firstpage_path) %>">
                <%= link_to "HOME", home_firstpage_path , method: 'get'%>
              </li>

              <li class="<%= is_active?(form_list_path(1)) %>">
                <%= link_to "성적정정", form_list_path(1), method: 'get'%>
              </li>
              <li class="<%= is_active?(form_list_path(2)) %>">
                <%= link_to "수강문의", form_list_path(2), method: 'get'%>
              </li>
              <li class="<%= is_active?(form_list_path(3)) %>">
                <%= link_to "출석문의", form_list_path(3), method: 'get'%>
              </li>
              <li class="<%= is_active?(form_list_path(4)) %>">
                <%= link_to "면담요청", form_list_path(4), method: 'get'%>
              </li>
              <li class="<%= is_active?(form_list_path(5)) %>">
                <%= link_to "기타양식", form_list_path(5), method: 'get'%>
              </li>
              <li class="<%= is_active?(post_list_path) %>">
                <%= link_to "커뮤니티", post_list_path, method: 'get'%>
              </li>
              <li class="<%= is_active?(cover_contact_path) %>">
                <%= link_to "CONTACT", cover_contact_path, method: 'get'%>
              </li>              
            </ul>
          </div>
  
        </div>
      </div>
    </div>
    <!--================= End sidebar ==================-->
    <!--================= Start Top Bar ====================-->
    <header> 
      <div class= "top-nav-bar">
        <span class= "logo-top">
         <%= link_to "교메때", home_firstpage_path, method: 'get' %>
        </span>
        <span class="top-button">
          <% if user_signed_in? %>
            <p><%= button_to "로그아웃", destroy_user_session_path, method: :delete, data:{confirm: "Are you sure?"}, id:"loginBtn1" %></p>
            <p><%= current_user.nickname %></p>
          <% else %>
            <%= button_to "로그인", new_user_session_path, id:"loginBtn1", method:"get", class: "top-button" %>
            <%= button_to "회원가입", new_user_registration_path, id:"loginBtn2", method:"get" %>
          <% end %>
        </span>
      </div>
    </header>

   
  <!--================= End Top Bar ====================-->
   
   <!--================= TOGGLE MENU ICON STARTS ==================-->
    <a href="#menu-toggle" class="menu-icon" id="menu-toggle"><i class="fa fa-bars"></i></a>
   <!--================= TOGGLE MENU ICON end ==================-->

   <!--================= Start Footer ==================-->
    <!--<footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="sub-footer"><span class="copyright"> Copyrights © 2016. All Rights Reserved by Motts.co</span></div>
          </div>
        </div>
      </div>
    </footer>-->
  <!--================= End Footer ==================-->
      
  </div>
  <!-- Jquery Lib version 1.11.0 -->
  <script type="text/javascript" src="javascripts/js/jquery.min.js"></script>
  <script type="text/javascript" src="javascripts/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="javascripts/js/plugins.js"></script>
  <script type="text/javascript" src="javascripts/js/main.js"></script>
 
 
<%= yield %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>

</div>
</body>

</html>
